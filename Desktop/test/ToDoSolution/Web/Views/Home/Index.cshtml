@model List<NTierTodoApp.Models.TaskItem> 
 
<!DOCTYPE html> 
<html> 
<head> 
    <meta charset="utf-8" /> 
    <title>ماهملا ةرادإ – n-tier</title> 
</head> 
<body> 
    <h1>ماهملا ةمئاق (n-tier)</h1> 
    <ul> 
        @foreach (var task in Model) 
        { 
            <li> 
                @if(task.IsComplete) 
                { 
                    <s>@task.Title</s> 
                } 
                else 
                { 
                    @task.Title 
                    <form method="post" asp-action="CompleteTask" style="display:inline;"> 
                        <input type="hidden" name="id" value="@task.Id" /> 
                        <button type="submit">تلمتكا</button> 
                    </form> 
                }    
<form method="post" asp-action="DeleteTask" style="display:inline;">
    <input type="hidden" name="id" value="@task.Id" />
    <button type="submit">حذف</button>
</form>
            </li> 
        } 
    </ul> 
 
    <form method="post" asp-action="AddTask"> 
        <input type="text" name="title" placeholder="ةديدج ةمهم فضأ" /> 
        <button type="submit">ةفاضإ</button> 
    </form> 
</body> 
</html> 